@using KS.QuestionAnswers.Dto
@model KS.QuestionAnswers.Dto.CreateQuestionAnswerDto


<h4>Share your knowledge. Write your answer here</h4>
<div class="panel">
    <div class="panel-body">
        <form asp-action="Answer" asp-controller="Question" method="post">            
            <br/>

            <input type="hidden" asp-for="@Model.QuestionId"/>

            <div class="form-group form-float">
                <div class="form-line">
                    <textarea class="form-control" rows="10" required minlength="7" asp-for="@Model.AnswerText"> </textarea>
                    <label class="form-label" asp-for="@Model.AnswerText">Write your answer here</label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Submit Answer</button>
            </div>
        </form>
    </div>
</div>
