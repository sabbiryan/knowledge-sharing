@using Abp.MultiTenancy
@using KS.Web.Models.Common.Modals
@using KS.Core.Models.Emums;
@model KS.Web.Views.Shared.Components.RatingSubmit.QuestionRatingSubmitModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("SubmitYourRating")))

<div class="modal-body">
    <form name="QuestionRatingSubmitForm" role="form" novalidate class="form-validation">
        <div class="form-group form-float">
            <div class="form-line">
                <select class="form-control" asp-for="Rating" asp-items="Html.GetEnumSelectList<Rating>()" required>
                    <option value="">Please Select Rating</option>
                </select>
                @*<label class="form-label">@L("Rating")</label>*@
            </div>
        </div>

        <div class="form-group form-float">
            <div class="form-line">
                <textarea class="form-control" type="text" name="Reason" maxlength="500" rows="5" value="@Model.Reason"></textarea>
                <label class="form-label">@L("RatingComment")</label>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSubmitAndCancel.cshtml")

<script src="~/view-resources/Views/Shared/Components/QuestionRatingSubmit/_QuestionRatingSubmitModal.js" asp-append-version="true"></script>
