
@using KS.Web.Startup
@model KS.Web.Models.Reports.FrequencyReportViewModel
@{
    ViewBag.CurrentPageName = PageNames.Reports; // The menu item will be active for this page.
}

@section scripts{
    <script src="~/view-resources/Views/Home/Question.js"></script>
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Frequency Report
                </h2>
            </div>
            <div class="body">

                @if (Model.PagedResultDto.TotalCount > 0)
                {
                    <div class="panel panel-body">
                        <table class="table table-responsive table-hover table-striped">
                            <thead>
                            <tr>
                                <td>User</td>
                                <td>Asked</td>
                                <td>Answered</td>
                                <td>Average Quality of Answer</td>
                                <td>Answer Shared</td>
                            </tr>
                            </thead>
                            <tbody>
                          
                            @foreach (var item in Model.PagedResultDto.Items)
                            {                        
                                <tr>
                                    <td>@item.UserFullName</td>
                                    <td>@item.QuestionSubmitCount</td>
                                    <td>@item.QuestionAnswerSubmitCount</td>
                                    <td>@item.AverageQuestionAnswerRating</td>
                                    <td>@item.QuestionAnswerViewedToOthersCount</td>
                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>                    
                }

            </div>
        </div>
    </div>
</div>